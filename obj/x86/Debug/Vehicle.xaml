<Page
    x:Class="PoePartThreeFinal.Vehicle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoePartThreeFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid Background="Black">
            <Grid x:ConnectionId='8' x:Name="BG">
                <Grid.Background>
                    <ImageBrush x:ConnectionId='9' x:Name="_img_bg"
                    ImageSource="Assets/Img/CarBg2.jpg"
                            Stretch="Fill"/>
                </Grid.Background>
            </Grid>
        </Grid>

        <StackPanel>
            <TextBlock FontSize="72" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="ExtraBold"
                       Margin="0 20 0 100"
                   >Vehicle Section</TextBlock>

            <TextBlock
                Foreground="White"></TextBlock>
            <Grid Width="1503">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="829*"/>
                    <ColumnDefinition Width="674*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock
                    FontSize="32"
                    Grid.Row="0"
                    Grid.Column="0"
                    Foreground="White" 
                    Margin="30,20,28,20"
                    >Enter make and model of the vehicle:</TextBlock>

                <TextBox x:ConnectionId='3' x:Name="tbModel"
                    FontSize="32"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="20 20 100 20"
                    Foreground="White"
                    ></TextBox>



                <TextBlock
                    FontSize="32"
                    Grid.Row="1"
                    Grid.Column="0"
                    Foreground="White" Margin="30,20,28,20"
                    >Enter the purchase price of the vehicle:</TextBlock>

                <TextBox x:ConnectionId='4' x:Name="tbPrice"
                    FontSize="32"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="20 20 100 20"
                    Foreground="White"
                    ></TextBox>

                <TextBlock
                    FontSize="32"
                    Grid.Row="2"
                    Grid.Column="0"
                    Foreground="White" Margin="30,20,28,20"
                    >Enter total deposit for the vehicle:</TextBlock>

                <TextBox x:ConnectionId='5' x:Name="tbDeposit"
                    FontSize="32"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="20 20 100 20"
                    Foreground="White"
                    ></TextBox>


                <TextBlock
                    FontSize="32"
                    Grid.Row="3"
                    Grid.Column="0"
                    Foreground="White" Margin="30,20,28,20"
                    >Enter the interest rate percentage for the vehicle:</TextBlock>

                <TextBox x:ConnectionId='6' x:Name="tbInterest"
                    FontSize="32"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="20 20 100 20"
                    Foreground="White"
                    ></TextBox>


                <TextBlock
                    FontSize="32"
                    Grid.Row="4"
                    Grid.Column="0"
                    Foreground="White" Margin="30,20,28,20"
                    >Enter the estimated insurance premium of the vehicle:</TextBlock>

                
                <TextBox x:ConnectionId='7' x:Name="tbInsurance"
                    FontSize="32"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="20 20 100 20"
                    Foreground="White"
                    ></TextBox>

            </Grid>

            <Button x:ConnectionId='2' x:Name="btnSubmit"
                                           
                FontSize="36"
                Margin="0 100 0 100"
                HorizontalAlignment="Center"
                >Submit</Button>
            
        </StackPanel>


    </Grid>
</Page>

