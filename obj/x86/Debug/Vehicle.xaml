<Page
    x:Class="PoePartThreeFinal.Vehicle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoePartThreeFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid Background="Black">
            <Grid x:ConnectionId='2' x:Name="BG">

                <Grid.Background>

                    <ImageBrush x:ConnectionId='3' x:Name="_img_bg"
                    ImageSource="Assets/Img/CarBg2.jpg"
                            Stretch="Fill"/>

                </Grid.Background>

            </Grid>


        </Grid>

        <StackPanel>
        <TextBlock FontSize="72" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="ExtraBold"
                   >Vehicle Section</TextBlock>

            <TextBlock
                Foreground="White"></TextBlock>
            <Grid Width="1503">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock
                    FontSize="32"
                    Grid.Row="0"
                    Grid.Column="0"
                    Foreground="White"
                    >Enter make and model of the vehicle:</TextBlock>

                <TextBox
                    FontSize="32"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="100 0"
                    Foreground="White"
                    ></TextBox>



                <TextBlock
                    FontSize="32"
                    Grid.Row="1"
                    Grid.Column="0"
                    Foreground="White"
                    >Enter the purchase price of the vehicle:</TextBlock>

                <TextBox
                    FontSize="32"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="100 0"
                    Foreground="White"
                    ></TextBox>

                <TextBlock
                    FontSize="32"
                    Grid.Row="2"
                    Grid.Column="0"
                    Foreground="White"
                    >Enter total deposit for the vehicle:</TextBlock>

                <TextBox
                    FontSize="32"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="100 0"
                    Foreground="White"
                    ></TextBox>


                <TextBlock
                    FontSize="32"
                    Grid.Row="3"
                    Grid.Column="0"
                    Foreground="White"
                    >Enter the interest rate percentage for the vehicle:</TextBlock>

                <TextBox
                    FontSize="32"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="100 0"
                    Foreground="White"
                    ></TextBox>


                <TextBlock
                    FontSize="32"
                    Grid.Row="4"
                    Grid.Column="0"
                    
                    Foreground="White"
                    >Enter the estimated insurance premium of the vehicle:</TextBlock>

                <TextBox
                    FontSize="32"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="100 0"
                    Foreground="White"
                    ></TextBox>

            </Grid>
        </StackPanel>

        
    </Grid>
</Page>

