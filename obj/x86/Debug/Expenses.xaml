<Page
    x:Class="PoePartThreeFinal.Expenses"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoePartThreeFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="0,0,10,0">

        <Grid Background="Black">
            <Grid x:ConnectionId='8' x:Name="BG">

                <Grid.Background>

                    <ImageBrush x:ConnectionId='9' x:Name="_img_bg"
                                ImageSource="Assets/Img/cagemoney2.png"
                                Stretch="Fill"/>
                </Grid.Background>
            </Grid>

        </Grid>
        
        <StackPanel>
            <TextBlock FontSize="52" 
                   FontWeight="ExtraBold"
                   Margin="0 30"
                   HorizontalAlignment="Center"
                       Foreground="White"
                   >Enter Expenses</TextBlock>


            <Grid Margin="150 30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                Margin="0 20"
                Foreground="White" 
                Grid.Column="0" 
                Grid.Row="0"
                FontWeight="Bold"
                FontSize="32">Enter estimated Monthly Tax:</TextBlock>

                <TextBox x:ConnectionId='2'  x:Name="tbMonthlyTax"
                    Grid.Column="1"
                    Grid.Row="0"
                    FontSize="32"
                    Foreground="White"></TextBox>

                <TextBlock 
                Margin="0 20"
                Foreground="White" 
                Grid.Column="0" 
                Grid.Row="1"
                FontWeight="Bold"
                FontSize="32">Enter groceries cost:</TextBlock>

                <TextBox x:ConnectionId='3' x:Name="tbGroceries"
                    Grid.Column="1"
                    Grid.Row="1"
                    FontSize="32"
                    Foreground="White"
                         ></TextBox>

                <TextBlock 
                Margin="0 20"
                Foreground="White" 
                Grid.Column="0" 
                Grid.Row="2"
                FontWeight="Bold"
                FontSize="32">Enter water and lights cost:</TextBlock>

                <TextBox x:ConnectionId='4' x:Name="tbWaterLights"
                    Grid.Column="1"
                    Grid.Row="2"
                    FontSize="32"
                    Foreground="White"></TextBox>

                <TextBlock 
                Margin="0 20"
                Foreground="White" 
                Grid.Column="0" 
                Grid.Row="3"
                FontWeight="Bold"
                FontSize="32">Enter travel costs(including fuel):</TextBlock>

                <TextBox x:ConnectionId='5' x:Name="tbTravel"
                    Grid.Column="1"
                    Grid.Row="3"
                    FontSize="32"
                    Foreground="White"></TextBox>

                <TextBlock 
                Margin="0 20"
                Foreground="White" 
                Grid.Column="0" 
                Grid.Row="4"
                FontWeight="Bold"
                FontSize="32">Enter cell phone and telephone costs:</TextBlock>

                <TextBox x:ConnectionId='6' x:Name="tbPhone"
                    Grid.Column="1"
                    Grid.Row="4"
                    FontSize="32"
                    Foreground="White"></TextBox>

                <TextBlock 
                Margin="0 20"
                Foreground="White" 
                Grid.Column="0" 
                Grid.Row="5"
                FontWeight="Bold"
                FontSize="32">Enter any other expenses:</TextBlock>

                <TextBox x:ConnectionId='7' x:Name="tbOther"
                    Grid.Column="1"
                    Grid.Row="5"
                    FontSize="32"
                    Foreground="White"></TextBox>

            </Grid>

            <Button 
                Margin="0 125"
                HorizontalAlignment="Center" 
                FontSize="34">Submit expenses</Button>
        </StackPanel>
    </Grid>


</Page>

