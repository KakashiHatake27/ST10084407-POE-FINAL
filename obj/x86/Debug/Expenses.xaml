<Page
    x:Class="PoePartThreeFinal.Expenses"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoePartThreeFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>

        <StackPanel.Background>
            <ImageBrush x:ConnectionId='2' x:Name="_img_bg"
                    ImageSource="Assets/Img/Cagemoney2.png"
                            Stretch="Fill"/>
        </StackPanel.Background>


        <TextBlock FontSize="52" 
                   FontWeight="ExtraBold"
                   Margin="0 20 0 70 "
                   HorizontalAlignment="Center"
                       Foreground="White"
                   >Expenses</TextBlock>


            <TextBox x:ConnectionId='3'  x:Name="tbMonthlyTax"
                      PlaceholderText="Please enter estimated Monthly Tax"
                      Header="Monthly tax"
                      Margin="300 20 300 20"   
                      Foreground="White"/>

            <TextBox x:ConnectionId='4' x:Name="tbGroceries"
                     Header="Groceries"
                      Margin="300 20 300 20"   
                    PlaceholderText="Please enter groceries cost"
                     Foreground="White"/>

            <TextBox x:ConnectionId='5' x:Name="tbWaterLights"
                     PlaceholderText="Please enter the cost of water and lights"
                     Header="Water and lights"
                      Margin="300 20 300 20"   
                    Foreground="White"/>

            <TextBox x:ConnectionId='6' x:Name="tbTravel"
                     PlaceholderText="Please enter travel costs(including fuel)"
                     Header="Travel costs"
                      Margin="300 20 300 20"   
                    Foreground="White"/>

            <TextBox x:ConnectionId='7' x:Name="tbPhone"
                     Header="Cellphone and telephone"
                      Margin="300 20 300 20"   
                     PlaceholderText="Please enter cell phone and telephone costs"
                    Foreground="White"></TextBox>

            <TextBox x:ConnectionId='8' x:Name="tbOther"
                     PlaceholderText="Please enter other miscellanous expenses"
                     Header="Other"
                      Margin="300 20 300 20"   
                    Foreground="White"></TextBox>


            <Button x:ConnectionId='9' x:Name="btnSubmit"
                Margin="0 60"
                HorizontalAlignment="Center" 
                                       
                FontSize="34">Submit expenses</Button>
        </StackPanel>


</Page>

