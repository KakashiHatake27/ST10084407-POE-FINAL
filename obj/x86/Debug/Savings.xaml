<Page
    x:Class="PoePartThreeFinal.Savings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoePartThreeFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>

        <StackPanel.Background>

            <ImageBrush x:ConnectionId='2' x:Name="_img_bg"
                    ImageSource="Assets/Img/savings2.png"
                            Stretch="Fill"/>
        </StackPanel.Background>
        
        <TextBlock FontSize="52" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="ExtraBold"
                   Margin="0 20 0 70"
                   >Savings</TextBlock>

        <TextBox x:ConnectionId='3' x:Name="tbAmount" 
                 Header="Amount"
                 PlaceholderText="Please enter the amount you would like to save"
                 Margin="500 20 500 20"
                 FontSize="16"/>


        <TextBox x:ConnectionId='4' x:Name="tbMonths" 
                 Header="Months"
                 PlaceholderText="Please enter the number of months you would like to save within"
                 Margin="500 20 500 20"
                 FontSize="16"/>


        <Button x:ConnectionId='5' x:Name="btnCalculate"
                                          
                FontSize="34"
                Margin="0 150 0 100"
                HorizontalAlignment="Center"
                Content="Calculate"/>

        <TextBlock x:ConnectionId='6' x:Name="tbResult"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="20"/>

    </StackPanel>
</Page>

