<Page
    x:Class="PoePartThreeFinal.Income"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoePartThreeFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel.Background>

                    <ImageBrush x:Name="_img_bg"
                                ImageSource="Assets/Img/coins.jpg"
                                Stretch="Fill"/>

                </StackPanel.Background>



        
        <TextBlock FontSize="52" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   Margin="0 20 0 70 "
                   FontWeight="ExtraBold">
            Income</TextBlock>


        <TextBox x:Name="tbIncome"
                         Header="Gross income"
                      Margin="300 20 300 20"   
                         PlaceholderText="Please enter your Gross monthly income(before taxes)"
                    Foreground="White"/>


        <Button x:Name="btnSubmit"
                HorizontalAlignment="Center"
                    Margin="0 200 0 100"
                FontSize="34">Submit</Button>
            
        </StackPanel>
 
</Page>
